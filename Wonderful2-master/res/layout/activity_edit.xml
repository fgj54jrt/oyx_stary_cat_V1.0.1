<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar_edit"
        style="@style/ActionBar" >
    </com.markupartist.android.widget.ActionBar>

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar_edit"
        android:layout_margin="16dp"
        android:background="@drawable/selector_edittext"
        android:gravity="left|top"
        android:hint="说说这段风景的故事吧"
        android:inputType="textMultiLine"
        android:maxLength="140"
        android:maxLines="8"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

    <TableLayout
        android:id="@+id/image_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <TableRow
            android:id="@+id/row_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:paddingTop="5dp"
            android:id="@+id/row_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/row_three"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>



    <LinearLayout
        android:id="@+id/tool_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <!-- 聊天输入框 -->
        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/emoji_custom_facerelativelayout" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/location_content"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_above="@id/tool_menu"
        android:layout_margin="10dp"
        android:background="@drawable/market_sng_icon_bg" >

        <LinearLayout
            android:id="@+id/location_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <ImageView
                android:id="@+id/location_pic"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/navigationbar_check_in"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/address"
                style="@style/TextTheme.tipstheme_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:text="广东省 深圳市 南山区 北环大道 1007号" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>